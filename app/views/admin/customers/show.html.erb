<h2><%= @customer.first_name %><%= @customer.last_name %>さんのページ</h2>
<table class="table">
	<thead>
			<th></th>
			<th></th>
			<th></th>
	</thead>
	<tbody>
		<tr>
			<th>会員ID</th>
			<td><%= @customer.id %></td>
		</tr>
		<tr>
			<th>名前</th>
			<td>（性）<%= @customer.first_name %></td>
			<td>（名）<%= @customer.last_name %></td>
		</tr>
		<tr>
			<th>ふりがな</th>
			<td>（性）<%= @customer.first_name_kana %></td>
			<td>（名）<%= @customer.last_name_kana %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.adress %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<th>会員ステータス</th>
			<td></td>
		</tr>
	</tbody>
</table>
<div class="customer-edit">
	<%= link_to "編集する", edit_admin_customer_path(@customer) %>
</div>
