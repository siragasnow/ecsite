<h2>ジャンル管理画面</h2>

<h4>ジャンル新規登録</h4>
<%= form_for(@genre, url:admin_genres_path) do |f| %>
	<%= f.label :name, "ジャンル名" %>
	<%= f.text_field :name %>
	<%= f.radio_button :is_active, :有効 %>
	<%= f.label :is_active, "有効" %>
	<%= f.radio_button :is_active, :無効 %>
	<%= f.label :is_active, "無効" %>
	<%= f.submit "登録する" %>
<% end %>

<h4>ジャンル一覧</h4>
<table class="table">
	<thead>
		<tr>
			<th>ジャンル名</th>
			<th>ステータス</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td><%= genre.is_active %></td>
			<td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
		</tr>
		<% end %>
	</tbody>
</table>