<h2>ジャンル編集画面</h2>
<%= form_for(@genre, url: admin_genre_path(@genre)) do |f| %>
	<%= f.label :name, "ジャンル名" %>
	<%= f.text_field :name %>
	<%= f.radio_button :is_active, 0 %>
	<%= f.label :is_active, "有効" %>
	<%= f.radio_button :is_active, 1 %>
	<%= f.label :is_active, "無効" %>
	<%= f.submit "登録する" %>
<% end %>
