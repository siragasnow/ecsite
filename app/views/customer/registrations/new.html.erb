<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

<table>
  <thead>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>名前</td>
      <td><%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name, autofocus: true, :placeholder =>"難波" %></td>
      <td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name, :placeholder =>"太郎" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"ナンバ" %></td>
      <td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"タロウ" %></td>
    </tr>
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし７桁）" %></td>
      <td><%= f.text_field :postal_code, :placeholder =>"5420076" %></td>
    </tr>
    <tr>
      <td><%= f.label :adress, "住所" %></td>
      <td><%= f.text_field :adress %></td>
    </tr>
    <tr>
      <td><%= f.label :phone_number, "電話番号" %></td>
      <td><%= f.text_field :phone_number, :placeholder =>"00011112222" %></td>
    </tr>
    <tr>
      <td><%= f.label :password, "パスワード" %></td>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "パスワード確認用" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </tbody>
</table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>

